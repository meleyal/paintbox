<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">  
  <%= csrf_meta_tag %>  

  <title>paintbox.es <%= yield :page_title %></title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
</head>

<body id="<%= yield :page_id %>" data-id="<%= params[:id] %>">

  <div id="wrap">

    <header>
      <h1><%= link_to("paintbox.es", root_path) %> <%= yield :page_title %></h1>
      <%= render "flash" %>
      <%= render "nav" %>
    </header>

    <section id="content" class="group">
      <%= yield %>
    </section>

  </div><!--/wrap-->

</body>
</html>