<ul>
  <% @users.each do |user| %>
  <li>
    <%= link_to user.username, user_path(user.username) %>
    <% if (current_user && current_user.admin?) %>
    / <%= link_to "delete", user_path(user.username), :class => "delete", :method => :delete, :confirm => "Are you sure?" %>
    <% end %>
  </li>
  <% end %>
</ul>