<% page_title @user.username %>
<% page_id "profile" %>

<% if signed_in? && (@user == current_user) %>
  <%= render 'swatches/form' %>
<% end %>  

<ul id="paintbox"></ul>

<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      app.collections.swatches.reset(<%= raw @swatches.to_json(:include => :color) %>);
    })
  </script>
<% end %>