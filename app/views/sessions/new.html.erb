<% title "sign in" %>

<% form_for(:session, :url => sessions_path) do |f| %>  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Sign in" %>
  </p>  
<% end %>

<p>
  new? <%= link_to "sign up", signup_path %>
</p>