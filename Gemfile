source 'http://rubygems.org'

gem 'rails', '3.1.0'
gem 'simple_form'
gem 'faker'
gem 'jquery-rails'
gem 'backbone-rails'
gem 'eco'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development do
  gem 'heroku'
  gem 'sqlite3'
  gem "wirble"
  gem "hirb"
  gem "awesome_print"
end

group :production do
  gem 'pg'
end